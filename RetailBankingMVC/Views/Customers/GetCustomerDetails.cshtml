@using Microsoft.AspNetCore.Http
@model RetailBankingMVC.Models.CustomerModels.Customer;
@{ ViewData["Title"] = "Customer Details";
    Layout = "~/Views/Shared/_Layout.cshtml"; }
<div class="container wrapper">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <div class="cardsss">
                <div class="card-header bg-dark text-white" style="text-align:center">Customer Details</div>
                <div class="card-body">
                    <table class="table">
                        @if (ViewBag.Message != null)
                        {
            <tr class="alert alert-warning">
                <td>@ViewBag.Message</td>
            </tr> }
                        else
                        {
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CustomerId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DOB)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PAN_Number)
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => modelItem.CustomerId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => modelItem.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => modelItem.Address)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => modelItem.DOB)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => modelItem.PAN_Number)
                                    </td>

                                    @if (Context.Session.GetString("IsCustomer") == "True")
                                    {
                    <td>
                        <a asp-action="GetCustomerAccount" asp-controller="Accounts" asp-route-customerId="@Model.CustomerId" class="btn btn-info">Transactions</a>
                    </td>
                                        }
                                </tr>
                            </tbody>}
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

