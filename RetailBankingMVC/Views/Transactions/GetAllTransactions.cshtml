
@model IEnumerable<RetailBankingMVC.Models.TransactionModels.Transactions>

@{ ViewData["Title"] = "GetTransactions";
    Layout = "~/Views/Shared/_Layout.cshtml"; }


<div class="container">
    <div class="row">
        <div class="col">
            <div class="cardsss">
                <div class="card-header bg-dark">
                    <h5 class="text-center text-white">Transactions History</h5>
                </div>
                @if (Model.Count() != 0)
                {

            <div class="card-body">
                <table class="table table table-striped  table-responsive table-hover " style="justify-content:space-between">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.TransactionId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.AccountId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CustomerId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.AmountOfTransaction)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TransactionMode)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PreviousBalance)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CurrentBalance)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DateOfTransaction)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CounterPartyId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PaymentMethod)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TransactionType)
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TransactionId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccountId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AmountOfTransaction)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TransactionMode)
                </td>
                <td>
                    ₹ @Html.DisplayFor(modelItem => item.PreviousBalance)
                </td>
                <td>
                    ₹ @Html.DisplayFor(modelItem => item.CurrentBalance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfTransaction)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CounterPartyId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaymentMethod)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TransactionType)
                </td>
            </tr>}
                    </tbody>
                </table>

            </div> }
        else
        {
            <h3 class="text-danger text-center" style="margin-top:10px">No Transactions Found</h3>
            <h3 class="text-danger text-center" style="margin-top:10px">@ViewBag.Message</h3>}
            </div>
        </div>
    </div>
</div>


